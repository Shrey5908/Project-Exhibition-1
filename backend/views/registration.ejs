<%- include('../views/baseheader.ejs') %>
<section style="padding-top: 5rem">
  <div class="register-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked /><label
        for="tab-1"
        class="tab"
        >Register As Student</label
      >
      <input id="tab-2" type="radio" name="tab" class="for-pwd" /><label
        for="tab-2"
        class="tab"
        >Register As Recuiter</label
      >
      <div class="login-form">
        <form action="/student/register" method="post" class="sign-in-htm">
          <div class="group">
            <label for="studentid" class="label">Registration Number</label>
            <input id="studentid" name="studentid" type="text" class="input" />
          </div>
          <div class="group">
            <label for="name" class="label">Name</label>
            <input id="name" name="name" type="text" class="input" />
          </div>
          <div class="group">
            <label for="email" class="label">Email</label>
            <input id="email" name="email" type="text" class="input" />
          </div>
          <div class="group">
            <label for="leetcode_username" class="label"
              >LeetCode Username</label
            >
            <input
              id="leetcode_username"
              name="leetcode_username"
              type="text"
              class="input"
            />
          </div>
          <div class="group">
            <label for="hackerrank_username" class="label"
              >HackerRank Username</label
            >
            <input
              id="hackerrank_username"
              name="hackerrank_username"
              type="text"
              class="input"
            />
          </div>
          <div class="group">
            <label for="cgpa" class="label">CGPA</label>
            <input id="cgpa" name="cgpa" type="text" class="input" />
          </div>
          <div class="group">
            <label for="branch" class="label">Branch</label>
            <input id="branch" name="branch" type="text" class="input" />
          </div>
          <div class="group">
            <label for="password" class="label">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              class="input"
              data-type="password"
            />
          </div>
          <!-- <div class="group">
                <label for="pass" class="label">Confirm Password</label>
                <input
                  id="pass"
                  type="password"
                  class="input"
                  data-type="password"
                />
              </div> -->
          <div class="group">
            <input type="submit" class="button" value="Register" />
          </div>
          <div class="hr"></div>
        </form>
        <form class="for-pwd-htm">
          <div class="group">
            <label for="user" class="label">Username or Email</label>
            <input id="user" type="text" class="input" />
          </div>
          <div class="group">
            <label for="pass" class="label">Password</label>
            <input
              id="pass"
              type="password"
              class="input"
              data-type="password"
            />
          </div>
          <div class="group">
            <label for="pass" class="label">Confirm Password</label>
            <input
              id="pass"
              type="password"
              class="input"
              data-type="password"
            />
          </div>
          <div class="group">
            <input type="submit" class="button" value="Admin Registration" />
          </div>
          <div class="hr"></div>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../views/basefooter.ejs') %>
