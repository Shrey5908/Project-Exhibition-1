<%- include('../views/baseheader.ejs') %>
<section style="padding-top: 5rem">
  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked /><label
        for="tab-1"
        class="tab"
        >Sign In</label
      >
      <input id="tab-2" type="radio" name="tab" class="for-pwd" /><label
        for="tab-2"
        class="tab"
        >Forgot Password</label
      >
      <div class="login-form">
        <form action="/student" method="post" class="sign-in-htm">
          <div class="group">
            <label for="studentid" class="label">Registration Number</label>
            <input id="studentid" name="studentid" type="text" class="input" />
          </div>
          <div class="group">
            <label for="password" class="label">Password</label>
            <input
              id="password"
              type="password"
              name="password"
              class="input"
              data-type="password"
            />
          </div>
          <div class="group">
            <input type="submit" class="button" value="Sign In" />
          </div>
          <div class="hr"></div>
          <div class="group">
            <a href="register">
              <input class="button" value="Register As Student" />
            </a>
          </div>
        </form>
      </div>
      <div class="for-pwd-htm">
        <div class="group">
          <label for="user" class="label">Username or Email</label>
          <input id="user" type="text" class="input" />
        </div>
        <div class="group">
          <input type="submit" class="button" value="Reset Password" />
        </div>
        <div class="hr"></div>
      </div>
    </div>
  </div>
</section>
<%- include('../views/basefooter.ejs') %>
